<%- include('../parts/html_head') %> <%- include('../parts/navbar') %>
<div class="container">
  <div class="row">
    <div class="col-6">
      <nav aria-label="Page navigation example">
        <ul class="pagination">
          <% for(let i=page-5; i<=page+5; i++) if(i>=1 && i<=totalPages) { 
          const qs2={...qs,page:i};  
            %>
          <li class="page-item <%= i===page ? 'active' : '' %>">
            <a class="page-link" href="?<%= new URLSearchParams(qs2).toString() %>"><%= i %></a>
          </li>
          <% } %>
        </ul>
      </nav>
    </div>
    <div class="col-6">
      <form class="d-flex" role="search">
        <input
          class="form-control me-2"
          type="search"
          placeholder="Search"
          name="keyword"
          value="<%= qs.keyword ? qs.keyword : '' %>"
        />
        <button class="btn btn-outline-success" type="submit">Search</button>
      </form>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th scope="col">編號</th>
            <th scope="col">姓名</th>
            <th scope="col">Email</th>
            <th scope="col">手機</th>
            <th scope="col">生日</th>
            <th scope="col">地址</th>
          </tr>
        </thead>
        <tbody>
          <% for(let r of rows){ %>
          <tr>
            <td><%= r['sid'] %></td>
            <td><%= r.name %></td>
            <td><%= r.email %></td>
            <td><%= r.mobile %></td>
            <td><%= r.birthday %></td>
            <td><%= r.address %></td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<%- include('../parts/script') %> <%- include('../parts/html_foot') %>
